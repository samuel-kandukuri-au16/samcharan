<% layout('layouts/boilerplate')%>

<h1>ALL SCHOOLS</h1>
<% for (let school of schools){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=school.images[0].url%>">
        </div>
        <div class="col-md-8 bg">
            <div class="card-body">
                <h5 class="card-title"><%= school.schoolName %> </h5>
                <p class="card-text bgi"><%= school.about %></p>
                <p class="card-text bgi">
                    <small class="text-muted"><%= school.location%></small>
                </p>
                <a class="btn btn-primary" href="/schools/<%=school._id%>">View <%=school.schoolName%></a>
            </div>
        </div>
    </div>
</div>
<% }%>